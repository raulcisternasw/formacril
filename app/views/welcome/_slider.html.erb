<div id="home" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @images.each do |indicator, file| %>
      <% if indicator == 0 %>
        <li data-target="#home" data-slide-to=<%= indicator %> class="active"></li>
      <% else %>
        <li data-target="#home" data-slide-to=<%= indicator %>></li>
      <% end %>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @images.each do |index, image| %>
      <% if index == 0 %>
        <div class="item active item-active">
          <%= image_tag(image, class: 'img-responsive') %>
        </div>
      <% else %>
        <div class="item">
          <%= image_tag(image, class: 'img-responsive') %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#home" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#home" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
