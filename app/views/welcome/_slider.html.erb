<div id="home" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#home" data-slide-to="0" class="active"></li>
    <li data-target="#home" data-slide-to="1"></li>
    <li data-target="#home" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "slides/Home-01.jpg", class: "img-responsive", alt: "First slide" %>
    </div>
    <div class="item">
      <%= image_tag "slides/Home-02.jpg", class: "img-responsive", alt: "Second slide" %>
    </div>
    <div class="item">
      <%= image_tag "slides/Home-03.jpg", class: "img-responsive", alt: "Third slide" %>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#home" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#home" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
